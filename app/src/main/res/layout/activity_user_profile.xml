<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.utu.utu.UserProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:shadowColor="#00ccff"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:id="@+id/lblPersonalProfile"
                android:text="Profile"
                android:textAlignment="center"
                android:textSize="40sp" />
            <com.joooonho.SelectableRoundedImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/photo"
                android:id="@+id/ivImageView"
                app:sriv_border_color="#40E0D0"
                app:sriv_border_width="2dp"
                app:sriv_oval="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lblName"
                android:text="Name"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lblFullName"
                android:textAlignment="center"
                android:text="User Last Name"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lblEmail"
                android:text="Email"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/lblEmailAddress"
                android:text="Email Address"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ID Number"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/lblIDNumber"
                android:text="ID Number"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mobile Number"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/lblMobileNumber"
                android:text="+2547200000000"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Address"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/lblAddress"
                android:text="Address"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Date Of Birth"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/lblDateOfBirth"
                android:text="01.01.0001"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="User Type"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/lblUserType"
                android:text="Client"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Service Providing"
                android:id="@+id/lblServiceProvidingLabel"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/lblServiceProviding"
                android:text="Client"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Location"
                android:textSize="15sp"/>
            <com.utu.utu.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/lblLocation"
                android:text="Client"
                android:textSize="15sp"/>

            <com.utu.utu.CustomButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnEditProfile"
                android:text="Edit"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"/>

            <com.utu.utu.CustomTextView
                android:id="@+id/lnkhome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Go back Home"
                android:gravity="center"
                android:textSize="16dip"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>